var mainWindow = Ti.UI.createWindow({
	backgroundColor: "fff",
	backgroundRepeat: true,
	title: "Well Testing Equipment"
});

var titleView = Ti.UI.createView({
	top: 20,
	height: 40,
	backgroundColor:"#848484"
});

var loadFile = require("JSON");

var headTitle = Ti.UI.createLabel({
	text: "Well Testing Equipment Terms and Definitions",
	font: {fontSize: 14, fontFamily: "Arial"},
	color: "#fff",
	center: titleView
});

for(var i=0, j=loadFile.data.equipNames.termsTest.length; i<j; i++){
	var row = Ti.UI.creatTableViewRow({
		title:loadFile.data.equipNames.termsTest[i].equip,
		hasChild: true
	});
	mainWindow.add(row);
};

titleView.add(headTitle);
mainWindow.add(titleView, loadFile.data);
mainWindow.open();