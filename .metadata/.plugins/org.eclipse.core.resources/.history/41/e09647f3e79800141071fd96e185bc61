var movies = ["I am Legend","Rundown","Boondock Saints","Matrix","Wedding Crashers","Happy Gilmore"];
var i = movies.length;
var nextMainText;
var prevMainText;

//function for the next button
var nextFnc = function(){
	mainText.hide();
	nextMainText.hide();
	prevMainText.hide();
	if(counter<i){
		counter=counter+1;
		nextMainText = Ti.UI.createLabel({
			text: movies[counter],
			font: {fontSize: 14},
			center: mainView
		});
		mainView.add(nextMainText);
	}else{
		counter=0;
		nextMainText = Ti.UI.createLabel({
			text: movies[counter],
			font: {fontSize: 14},
			center: mainView
		});
		mainView.add(nextMainText);
	};
	mainWindow.add(prevView);
};

//function for the prev button
var prevFnc = function(){
	mainText.hide();
	nextMainText.hide();
	prevMainText.hide();
	if(counter>=0){
		counter=counter-1;
		prevMainText = Ti.UI.createLabel({
			text: movies[counter],
			font: {fontSize: 14},
			center: mainView
		});
		mainView.add(prevMainText);
	}else{
		counter=4;
		prevMainText = Ti.UI.createLabel({
			text: movies[counter],
			font: {fontSize: 14},
			center: mainView
		});
		mainView.add(prevMainText);
	};
};

//event listeners
prevView.addEventListener("click", prevFnc);
nextView.addEventListener("click", nextFnc);